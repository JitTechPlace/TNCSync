            </TabItem>
            <TabItem Header="Invoice"  BorderBrush="Transparent">
                <Grid>
                    <TextBlock Text="Sync Invoice" VerticalAlignment="Top" Margin="5" FontSize="15" Foreground="{StaticResource color1}"/>
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="From Date:" FontSize="15"  />
                            <DatePicker Width="120" Margin="5 0" />
                            <TextBlock Text="To Date:" FontSize="15"  />
                            <DatePicker Width="120" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                            </Grid>

                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="25 15 10 0">
                                <TextBlock Text="CustomerName:" FontSize="15"  Margin="10"/>
                                <TextBlock Text="InvoiceNumber:" FontSize="15"  Margin="10"/>
                                <TextBlock Text="Template Name:" FontSize="15"  Margin="10"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Grid.Row="1" Margin="25 15 10 0">
                                <ComboBox Style="{StaticResource RoundComboBox}" Height="25" Width="200"  Margin="10" />
                                <ComboBox Style="{StaticResource RoundComboBox}" Height="25" Width="200"  Margin="10" />
                                <ComboBox x:Name="cmbxTmptInvoice" Style="{StaticResource RoundComboBox}" Height="25" Width="200"  Margin="10" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Sync" Style="{StaticResource controlButton}" Background="{StaticResource panelActiveColor}" Tag="{StaticResource rdSolidWhiteSmoke}" Height="30" Width="110"/>
                            <Button Content="SyncAll" x:Name="syncalInvoice" Style="{StaticResource controlButton}" Background="{StaticResource panelActiveColor}" Tag="{StaticResource rdSolidWhiteSmoke}" Height="30" Width="110" Margin="5" Click="syncalInvoice_Click"/>
                            <Button Content="Print" Style="{StaticResource controlButton}" Background="{StaticResource panelActiveColor}" Tag="{StaticResource rdSolidWhiteSmoke}" Height="30" Width="110"/>
                            <Button Content="Clear" Style="{StaticResource SPStyleButton}"  Height="30" Width="110" Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Receipt"  BorderBrush="Transparent">
